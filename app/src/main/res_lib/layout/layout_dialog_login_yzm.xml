<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ab000000"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_r9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacing_medium"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_more"
            android:showDividers="middle">

            <TextView
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:paddingLeft="@dimen/spacing_medium"
                android:paddingRight="@dimen/spacing_medium"
                android:text="@string/login_yzm"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_more" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center|right"
                    android:scrollbars="vertical"
                    android:text="手机号："
                    android:textColor="@color/text_normal6"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/contentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="136****3771"
                    android:textColor="@color/text_normal"
                    android:textSize="@dimen/text_max" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingLeft="@dimen/spacing_medium"
            android:paddingRight="@dimen/spacing_medium"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yzm_et"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:background="@drawable/press_rect_bnt_yzm"
                android:layout_weight="1"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/c_text02"
                android:textColorHint="@color/c_text02"
                android:textSize="@dimen/text_15" />

            <Button
                android:id="@+id/yzm_bnt"
                android:layout_marginLeft="10dp"
                android:layout_width="102dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/xml_btn_yzm"
                android:gravity="center"
                android:text="@string/get_yzm"
                android:textColor="@drawable/xml_btn_yzm_tv"
                android:textSize="@dimen/text_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_rect_topprimary_solidtransparent"
            android:divider="@drawable/line_primary"
            android:orientation="horizontal"
            android:showDividers="middle">

            <TextView
                android:id="@+id/negativeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_rect_solidtransparent"
                android:gravity="center"
                android:padding="@dimen/spacing_smedium"
                android:text="取消"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_more" />

            <TextView
                android:id="@+id/neutralView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_rect_solidtransparent"
                android:gravity="center"
                android:padding="@dimen/spacing_smedium"
                android:text="只能选两边"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_more"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/positiveView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/press_rect_solidprimary"
                android:gravity="center"
                android:padding="@dimen/spacing_smedium"
                android:text="确认"
                android:textColor="@color/colorWidely"
                android:textSize="@dimen/text_more" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>